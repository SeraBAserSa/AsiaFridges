@model FridgeType

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Edit Fridge Type</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">

                <div asp-validation-summary="All"></div>
                <input asp-for="FridgeTypeID" hidden />

                <div class="form-floating py-2 col-12">
                    <input asp-for="FridgeTypeName" class="form-control border-0 shadow" />
                    <label asp-for="FridgeTypeName" class="ms-2"></label>
                    <span asp-validation-for="FridgeTypeName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="FridgeType" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
